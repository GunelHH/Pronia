@model Slider

<div class="main-panel">
    <h1>Edit Slider</h1>
    <div class="image" my-3>
        <img src="~/assets/images/slider/@Model.Image" />
    </div>
    <form class="mt-3" method="post">
        <div>
            <label>Image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label>Discount:</label><br />
            <input asp-for="Discount" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div>
            <label>Title:</label><br />
            <input asp-for="Title" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label>Article:</label><br />
            <input asp-for="Desc" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>

      
        <div>
            <label>Button URL:</label><br />
            <input asp-for="ButtonURL" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="ButtonURL"></span>
        </div>
        <div>
            <label>Order:</label><br />
            <input asp-for="Order" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Order"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
</div>




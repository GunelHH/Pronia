@model List<Slider>
<div class="main-panel">

    <div>
        <a asp-area="proniaadmin" asp-controller="slider" asp-action="create" class="btn btn-success">Create new Slider</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Article
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody >
                @foreach (Slider slider in Model)
                {
                    <tr>
                        <td>
                            <img style="width:100px;height:100px;object-fit:contain" src="~/assets/images/website-images/@slider.Image" />
                            
                        </td>
                        <td>
                            @slider.Title
                        </td>
                        <td>
                            @slider.Desc
                        </td>
                        <td >
                            <div class="d-flex ">
                                <div class="mx-3">
                                    <a asp-area="proniaadmin" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id" class="btn btn-warning ">
                                        <i class="mdi mdi-border-color"></i>
                                    </a>
                                </div>
                                <div>
                                    <a asp-area="proniaadmin" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>


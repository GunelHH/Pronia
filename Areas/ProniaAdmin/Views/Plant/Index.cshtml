@model List<Plant>
<div class="main-panel">

    <div>
        <a asp-area="proniaadmin" asp-controller="plant" asp-action="create" class="btn btn-success">Create new Plant</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        SKU
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Plant plant in Model)
                {
                    <tr>
                        <td>
                            <img style="width:100px;height:100px;object-fit:contain" src="~/assets/images/website-images/@plant.Images.FirstOrDefault(p=>p.IsActive==true)?.Name" />

                        </td>
                        <td>
                            @plant.Name
                        </td>
                        <td>
                            @plant.Price
                        </td>
                        <td>
                            @plant.SKU
                        </td>
                        <td>
                            <div class="d-flex ">
                                <div class="mx-3">
                                    <a asp-area="proniaadmin" asp-controller="plant" asp-action="update" asp-route-id="@plant.Id" class="btn btn-warning ">
                                        <i class="mdi mdi-border-color"></i>
                                    </a>
                                </div>
                                <div>
                                    <a asp-area="proniaadmin" asp-controller="plant" asp-action="delete" asp-route-id="@plant.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>


